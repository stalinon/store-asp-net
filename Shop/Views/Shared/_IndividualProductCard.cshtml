@model Shop.Models.Product

        <div class="col-lg-4 col-md-6 pb-4 filter @Model.Category.Name.Replace(' ', '_')">
            <!-- Card-->
            <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
                <div class="card-body px-3 pt-3 pb-1 row">
                    <div class="col-7"><label class="float-left" style="height:50px">
                        
                        @if(Model.Name.Length > 30)
                            {
                                var str = Model.Name.Substring(0, 30) + "...";
                                @str;
                            }
                            else
                            {
                                @Model.Name;
                            }
                    </label></div>
                    <div class="col-5"><label class="float-right"><span class="text-info h6">@Model.Price.ToString("c")</span></label> </div>
                </div>
                <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@WC.ImagePath@Model.Image" alt="Card image cap" height="300">
                <div class="card-body p-1 px-3 row">
                    <div class="col-6">
                        <span class="badge p-2 border w-100" style="background-color:lavenderblush">
                            @if(Model.Category.Name.Length > 15)
                            {
                                var str = Model.Category.Name.Substring(0, 15) + "...";
                                @str;
                            }
                            else
                            {
                                @Model.Category.Name;
                            }
                        </span>
                    </div>
                <div class="col-6 border-0">
                    <span class="badge p-2 border w-100" style="background-color:aliceblue">
                        @if(Model.ApplicationType.Name.Length > 15)
                            {
                                var str = Model.ApplicationType.Name.Substring(0, 15) + "...";
                                @str;
                            }
                            else
                            {
                                @Model.ApplicationType.Name;
                            }
                    </span>
                </div>
                <div class="col-12 pt-2" style="font-size:13px; text-align:justify; height:70px" >
                    <p> 
                        @if(Model.ShortDesc.Length > 70)
                            {
                                var str = Model.ShortDesc.Substring(0, 70) + "...";
                                @str;
                            }
                            else
                            {
                                @Model.ShortDesc;
                            }
                    </p>
                </div>
                <div class="col-12 p-1">
                    <a asp-route-id="@Model.Id" asp-action="Details" class="btn btn-outline-dark form-control btn-sm p-2" style="height:40px">View Details</a>
                </div>
                </div>
            </div>
        </div>
